<resources>

    <style name="Widget.Test.AppWidget.Container" parent="android:Widget">

    </style>

    <style name="TextAppearance.Widget.SmallText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">true</item>
        <item name="android:contentDescription">"Countdown Timer"</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_slab_thin</item>

    </style>
    <style name="SmallTextAppearanceActive" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>  <!-- ✅ Smaller active text -->
        <item name="android:textColor">@color/white</item>  <!-- White -->

    </style>

    <style name="SmallTextAppearanceInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">9sp</item>  <!-- ✅ Smaller inactive text -->
        <item name="android:textColor">@color/gray</item>  <!-- Gray -->

    </style>


</resources>