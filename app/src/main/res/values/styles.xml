<resources>

    <style name="Widget.Test.AppWidget.Container" parent="android:Widget">

    </style>

    <style name="TextAppearance.Widget.SmallText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">8sp</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">true</item>
        <item name="android:contentDescription">"Countdown Timer"</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_slab_thin</item>

    </style>
    <style name="SmallTextAppearanceActive" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">8sp</item>  <!-- ✅ Smaller active text -->
        <item name="android:textColor">@color/white</item>  <!-- White -->

    </style>

    <style name="SmallTextAppearanceInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">9sp</item>  <!-- ✅ Smaller inactive text -->
        <item name="android:textColor">@color/gray</item>  <!-- Gray -->

    </style>
    <style name="DialogFade" parent="MaterialAlertDialog.Material3">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>



    <style name="RoundedEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="FullScreenBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullScreenBottomSheetStyle</item>
    </style>

    <style name="FullScreenBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Widget.MyApp.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="chipStrokeColor">?attr/colorOutline</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="DialogSlideUpDown">
        <item name="android:windowEnterAnimation">@anim/item_slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>