<resources>

    <style name="Widget.Test.AppWidget.Container" parent="android:Widget">

    </style>

    <style name="SmallTextAppearanceActive" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">8sp</item>  <!-- ✅ Smaller active text -->
        <item name="android:textColor">@color/white</item>  <!-- White -->

    </style>

    <style name="SmallTextAppearanceInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">9sp</item>  <!-- ✅ Smaller inactive text -->
        <item name="android:textColor">@color/gray</item>  <!-- Gray -->

    </style>


    <style name="RoundedEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="DialogSlideUpDown">
        <item name="android:windowEnterAnimation">@anim/item_slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="SmallFabBadge" parent="Widget.MaterialComponents.Badge">
        <item name="badgeTextAppearance">@style/SmallFabBadgeText</item>
    </style>

    <style name="SmallFabBadgeText" parent="TextAppearance.MaterialComponents.Badge">
        <item name="android:textSize">7sp</item>
    </style>


</resources>