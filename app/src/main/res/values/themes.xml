    <style name="SnackbarText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">@color/box_alert_update
        </item> <!-- Set your desired text color -->
    </style>


    <style name="OpenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon">
            @drawable/windowsdayanimationicon
        </item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowSplashScreenIconBackgroundColor">
            @android:color/transparent
        </item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/white
        </item> <!-- Set status bar color to white -->
        <item name="android:windowActionBar">false</item> <!-- Ensure action bar is hidden -->
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="Theme.Test.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">

    </style>

    <style name="Theme.Test.AppWidgetContainer" parent="Theme.Test.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>


    <style name="NoShadowFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@android:color/holo_blue_dark</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>

    </style>

    <style name="NoShadowFABCall" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">1dp</item>
        <item name="backgroundTint">@android:color/holo_green_light</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
    </style>

    <style name="fab_set_Lic_pr_con" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">2dp</item>
        <item name="backgroundTint">@color/color_success</item>
        <item name="itemFillColor">?attr/itemIconTint</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
    </style>

    <style name="NoShadowFABCallCancel" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">1dp</item>
        <item name="backgroundTint">@android:color/holo_red_light</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
    </style>


    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item> <!-- Rounded corners -->
        <item name="cornerSize">30dp</item> <!-- Adjust the corner size for a less rounded look -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeOverlay
        </item> <!-- Add an optional overlay if needed -->
    </style>

    <style name="NoShadow_front_fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@android:color/holo_green_light</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance_fab</item>
    </style>

    <style name="CustomShapeAppearance_fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item> <!-- Rounded corners -->
        <item name="cornerSize">18dp</item> <!-- Adjust the corner size for a less rounded look -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeOverlay
        </item> <!-- Add an optional overlay if needed -->
    </style>

    <style name="CustomShapeOverlay">
        <item name="cornerSize">15dp</item> <!-- Additional customization for the overlay -->
    </style>
    <!-- Circular shape style -->
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_app_bar
        </item> <!-- Set the custom background -->
        <item name="android:elevation">5dp</item> <!-- Set elevation for shadow -->
    </style>
    <!-- Define a custom style for MaterialCardView with rounded corners only on left and right -->
    <!-- Define a custom style for MaterialCardView with rounded corners only on top left and right -->
    <style name="RoundedCardViewStyle">
        <item name="android:background">@drawable/rounded_top_left_right
        </item> <!-- Use custom drawable -->
        <item name="cornerSize">12dp</item> <!-- Additional customization for the overlay -->
        <item name="cardForegroundColor">@color/transparent</item>
    </style>

    <!-- Define a theme that uses the above style -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="cornerSize">12dp</item> <!-- Additional customization for the overlay -->
        <item name="materialCardViewStyle">@style/RoundedCardViewStyle</item>
    </style>

    <style name="CustomBottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

