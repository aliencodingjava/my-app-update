    <!-- Define custom style for contact text views -->
    <style name="ContactItemText" parent="Base.Theme.Test">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">?attr/actionMenuTextColor</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Style for smaller text (for email and address) -->
    <style name="ContactItemTextSmall" parent="Base.Theme.Test">
        <item name="android:textSize">9sp</item> <!-- Smaller text size -->
        <item name="android:textColor">?attr/actionMenuTextColor</item>
        <item name="android:lineSpacingExtra">2dp
        </item> <!-- Optional: Adjust line spacing for smaller text -->
        <item name="android:paddingBottom">2dp</item> <!-- Optional: Reduce bottom padding -->
    </style>


    <!-- Style for contact item layout -->
    <style name="ContactItemLayout">
        <item name="android:padding">12dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


