<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Subtle blue-tinted film to feel "glass" (about 5â€“8% opacity) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D9ADCFB"/>
        </shape>
    </item>

    <!-- Vertical scrim: darker at top & bottom, fully transparent in the middle -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
            android:startColor="#DF0B0F14"
            android:centerColor="#74000000"
            android:endColor="#E1000000"
            android:centerY="0.52"/>
        </shape>
    </item>

    <!-- Bottom vignette to lift the bottom bar nicely -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="420dp"/>
            <gradient
                android:type="radial"
                android:centerX="50%"
                android:centerY="100%"
                android:gradientRadius="380dp"
                android:startColor="#BF000000"
            android:centerColor="#11000000"
            android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>
