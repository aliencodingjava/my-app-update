<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸ”´ Default Background (start color actionbarwebsiteBlue end color bottom_bar) -->
    <item android:id="@+id/main_card_layer">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="@color/actionbarwebsiteBlue"
                android:endColor="@color/bottom_bar"/>
            <corners android:radius="20dp"/>
            <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- ðŸŽ¨ Neutral Background (Frosted Glass) -->
    <item android:id="@+id/main_background">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_blur_overlay"/> <!-- Frosted Effect -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- ðŸŸ¡ Success Glow (Gold Flash) -->
    <item android:id="@+id/success_glow" android:alpha="0">
        <shape android:shape="rectangle">
            <solid android:color="@color/holo_yellow_light"/> <!-- Gold Glow -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- ðŸ”´ Error Glow (Red Flash) -->
    <item android:id="@+id/error_glow" android:alpha="0">
        <shape android:shape="rectangle">
            <solid android:color="@color/neon_red"/> <!-- Red Glow -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- ðŸ”µ Glass Blur Overlay (Softens Appearance) -->
    <item android:id="@+id/glass_blur_overlay">
        <shape android:shape="rectangle">
            <solid android:color="@color/arrow_down"/> <!-- Frosted Glass Effect -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- ðŸ•¶ Soft Shadow Effect (Always Visible) -->
    <item android:id="@+id/glass_shadow" android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_shadow"/> <!-- Shadow effect -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>