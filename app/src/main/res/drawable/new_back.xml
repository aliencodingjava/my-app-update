<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/material_yellow"> <!-- ripple color -->

    <item>
        <layer-list>
            <!-- Background layer (Battery outline) -->
            <item>
                <shape android:shape="rectangle">
                    <size android:width="40dp" android:height="20dp"/>
                    <solid android:color="?attr/colorOnSurfaceInverse"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>

            <!-- Foreground layer (Battery fill) -->
            <item android:id="@id/fill">
                <clip android:clipOrientation="horizontal" android:gravity="left">
                    <shape android:shape="rectangle">
                        <size android:width="25dp" android:height="2dp"/>
                        <solid android:color="#FFFFFF"/>
                        <corners android:radius="30dp"/>
                    </shape>
                </clip>
            </item>

            <!-- Icon layer -->
            <item android:drawable="@drawable/ic_oui_back" android:gravity="center"/>
        </layer-list>
    </item>

</ripple>
