<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer (Battery outline) -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="20dp"/> <!-- Set the full size of the drawable to 16dp by 16dp -->
            <solid android:color="#50000000"/> <!-- Semi-transparent black for background -->
            <corners android:radius="30dp"/> <!-- Rounded rectangle for oval appearance -->
        </shape>
    </item>

    <!-- Foreground layer (Battery fill) -->
    <item android:id="@id/fill">
        <clip android:clipOrientation="horizontal" android:gravity="left">
            <shape android:shape="rectangle">
                <size
                    android:width="25dp"/>
                android:height="2dp"/>
                <solid android:color="#FFFFFF"/> <!-- White fill color -->
                <corners android:radius="30dp"/> <!-- Rounded corners -->
            </shape>
        </clip>
    </item>

    <!-- Icon layer -->
    <item android:drawable="@drawable/person_add_24dp_ffffff_fill0_wght400_grad0_opsz24" android:gravity="center"/>
</layer-list>
