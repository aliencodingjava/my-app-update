<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer (Battery outline) -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="40dp"
                android:height="20dp" /> <!-- Set the full size of the drawable -->
            <solid android:color="#50000000" /> <!-- Semi-transparent black for background -->
            <corners android:radius="30dp" /> <!-- Rounded rectangle for oval appearance -->
        </shape>
    </item>

    <item android:id="@id/fill">
        <clip
            android:clipOrientation="horizontal"
            android:gravity="left">
            <shape android:shape="rectangle">
                <size android:width="25dp" android:height="2dp"/> <!-- Fixed the closing tag here -->
                <solid android:color="#FFFFFF" /> <!-- White fill color -->
                <corners android:radius="30dp" /> <!-- Rounded corners -->
            </shape>
        </clip>
    </item>

    <!-- Icon layer -->
    <item
        android:drawable="@drawable/ic_oui_delete"
        android:gravity="center" />
</layer-list>
