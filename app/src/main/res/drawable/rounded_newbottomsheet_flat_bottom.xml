<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Solid color for the background -->
    <solid android:color="@color/box_alert_update" />
    <corners
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp" />
    <gradient
        android:type="radial"
    android:endColor="@color/box_alert_update"
    android:gradientRadius="90%"
    android:centerX="50%"
    android:centerY="50%"
    android:useLevel="false"/>

    <stroke
        android:width="0.0dp"
    android:color="@color/material_yellow"/>
</shape>
