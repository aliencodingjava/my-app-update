<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Neon Glow Effect -->
    <item>
        <shape android:shape="oval">
            <corners android:radius="0dp"/>
        </shape>
    </item>

    <!-- Inner darker layer (to create depth) -->
    <item android:top="8dp" android:bottom="8dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="?android:attr/colorActivatedHighlight"/> <!-- Black or your background color -->
            <corners android:radius="50dp"/>
        </shape>
    </item>

</layer-list>
