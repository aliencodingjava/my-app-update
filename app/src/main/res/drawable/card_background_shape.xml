<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base color for the card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red" /> <!-- The color you want for the note -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Soft glow effect around the card -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@android:color/white"
                android:centerColor="@android:color/transparent"
                android:endColor="@android:color/transparent"
                android:angle="45" /> <!-- Angle for the glow effect -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
