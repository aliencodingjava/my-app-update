<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
    <shape>
        <solid android:color="#50000000"/>
        <corners android:radius="12dp"/>
    </shape>
</item>
<item>
    <shape>
        <gradient
            android:type="linear"
            android:centerX="0.1"
            android:centerY="0.5"
            android:useLevel="true"
            android:startColor="@color/button_color_dark"
            android:centerColor="@color/actionbarwebsitestandart"
            android:endColor="@color/box_alert_update"
            android:angle="45"/>
        <corners android:radius="12dp"/>
    </shape>
</item>
</layer-list>
