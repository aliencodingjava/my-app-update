<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 0) Your normal fill + 30dp corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/box_qrcode"/>
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp"/>
        </shape>
    </item>

    <!-- 1) Inset in by 2dp on all sides, with a transparent stroke we will animate -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- initially transparent -->
            <stroke
                android:width="4dp"
                android:color="@android:color/transparent"/>
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp"/>
        </shape>
    </item>

</layer-list>
