<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/material_yellow"> <!-- Ripple color -->

    <item>
        <inset
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp">

            <layer-list>
                <!-- Background Shape -->
                <item>
                    <shape android:shape="oval"> <!-- Oval ripple shape -->
                        <solid android:color="@color/white" />
                        <size
                            android:width="40dp"
                            android:height="0dp" />
                    </shape>
                </item>

                <!-- Main Shape -->
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="@color/black" />
                        <corners
                            android:topLeftRadius="0dp"
                            android:topRightRadius="0dp"
                            android:bottomLeftRadius="0dp"
                            android:bottomRightRadius="0dp" />
                        <size
                            android:width="40dp"
                            android:height="0dp" /> <!-- Set height for visibility -->
                    </shape>
                </item>

                <!-- Arrow Icon with Padding -->
                <item
                android:drawable="@drawable/edit_note_24dp_ffffff_fill0_wght400_grad0_opsz24"

                    android:left="9dp"
                    android:right="9dp" />
            </layer-list>
        </inset>
    </item>
</ripple>
