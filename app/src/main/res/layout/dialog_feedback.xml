<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedbackCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorControlActivated"
    app:cardUseCompatPadding="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:backgroundTint="@color/bottomAppBarColorPortrait"
    android:background="@drawable/bs_feedback_bg"
    android:layout_margin="8dp"
    android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="0dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/feedbackSoundCheck"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/enable_click_sound"
            android:textSize="12sp"
            android:checked="true"
            android:paddingStart="3dp"
            android:paddingEnd="10dp"
            app:buttonTint="?android:attr/colorEdgeEffect"
            app:buttonCompat="@style/Widget.Material3.CompoundButton.RadioButton"
            android:layout_marginStart="0dp"
            android:background="@drawable/checking_for_updates_backround"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:id="@+id/typingVisualizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/feedbackSoundCheck"
            app:layout_constraintStart_toEndOf="@id/feedbackSoundCheck"
            app:layout_constraintTop_toTopOf="@id/feedbackSoundCheck">

            <!-- three little bars -->
            <View
                android:id="@+id/bar1"
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bar_rounded" />

            <View
                android:id="@+id/bar2"
                android:layout_width="4dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bar_rounded" />

            <View
                android:id="@+id/bar3"
                android:layout_width="4dp"
                android:layout_height="14dp"
                android:background="@drawable/bar_rounded" />

        </LinearLayout>
        <!-- Server status aligned end -->

        <LinearLayout
            android:id="@+id/statusBar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/checking_for_updates_backround"
            android:gravity="center_vertical|center_horizontal|end"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/statusIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/online_indicator" />

            <!-- online text feedbackStatusText working-->
            <TextView
                android:id="@+id/feedbackStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="@string/checking_status"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="11sp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck,TextContrastCheck" />


            <!-- online text online offline not working need fixed -->
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/feedbackInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:hint="@string/enter_your_feedback_here"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/feedbackEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:maxLines="5"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:hint=""
                android:background="@drawable/checking_for_updates_backround"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="12dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rulesButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="0dp"
                android:src="@drawable/ic_oui_info"
                android:contentDescription="@string/feedback_rules"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="4dp"
                app:tint="?attr/colorOnSurface" />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/feedbackProgressBar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone" />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

            <TextView
                android:id="@+id/submitFeedbackButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/checking_for_updates_backround"
                android:backgroundTint="@color/color_success"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/send_feedback"
                android:textColor="#4A148C"
                android:textStyle="normal"
                app:drawableEndCompat="@android:drawable/ic_menu_send"
                tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
