<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical|center_horizontal"
    android:id="@+id/bottom_sheet_container_downloading_update"
    android:padding="0dp"
    android:gravity="center">

    <!-- FrameLayout to contain the Circular Progress Bar and Text in the center -->
<com.flights.studio.DraggableCardView
    android:id="@+id/animation_here"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:strokeColor="@color/transparent"
    android:layout_gravity="center_vertical|center_horizontal"
    app:cardElevation="8dp"
    android:backgroundTint="@color/box_alert_update"
    app:rippleColor="@color/holo_yellow_light"
    android:clickable="true"
    android:focusable="true"
    android:contextClickable="true"
    app:cardCornerRadius="100dp"
    android:textAlignment="center"
    android:layout_marginTop="0dp">



    <!-- Circular Progress Bar -->

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false"
        android:max="100"
        android:background="@drawable/bg_card_glass"

        android:elevation="8dp"
        app:trackColor="?attr/colorControlActivated"
        android:progress="0"
        app:indicatorSize="200dp"/>


    <ImageView
        android:id="@+id/internetStrengthIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/internet_strength"
        android:src="@drawable/network_check_24dp_ffffff_fill0_wght400_grad0_opsz24"
        app:tint="?attr/colorOnBackground" />


    <!-- Text to show progress percentage or remaining time -->
    <TextView
        android:id="@+id/internetStrengthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="@string/internet_strength_weak"
        android:textSize="10sp"
        android:textColor="@color/text_color_alert"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        tools:ignore="SmallSp" />
<!-- Text to show progress percentage or remaining time -->
    <!-- Sits INSIDE the 190dp ring -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoPanel"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="26dp"
    app:cardCornerRadius="30dp"
        app:cardElevation="1dp"
        app:strokeColor="@color/transparent"
    app:cardUseCompatPadding="false"
    android:clipToOutline="true"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textSize="18sp"
            android:textColor="@color/text_color_alert"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/megabit_per_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MB/sec"
            android:textSize="9sp"
            android:textColor="@color/text_color_alert"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/please_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download_in_progress"
            android:textSize="12sp"
            android:textColor="@color/text_color_alert"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/please_wait_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_app_download_is_in_progress"
            android:textSize="7sp"
            android:textColor="@color/text_color_alert"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


</com.flights.studio.DraggableCardView>


    </LinearLayout>
