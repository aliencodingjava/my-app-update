<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="14dp"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_reminder_sheet"
    android:clipToPadding="false">

    <!-- drag handle (optional, looks like a bottom sheet) -->
    <View
        android:id="@+id/top_view"
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_sheet_handle"
        android:alpha="0.6"
        android:layout_marginBottom="12dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_reminder_type"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        android:textColor="@color/color_success" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reminder_hint_short"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:textColor="?android:attr/colorEdgeEffect" />

    <!-- Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:baselineAligned="false">

        <!-- TIMER -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            style="@style/Widget.Material3.CardView.Elevated"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp"
            app:strokeWidth="0dp"
            app:rippleColor="@color/material_yellow"
            app:strokeColor="?attr/colorOutlineVariant"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/btnTimer"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/button_background"
                    android:backgroundTint="?android:attr/colorForegroundInverse"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_oui_time"
                    android:contentDescription="@string/set_timer"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timer"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timer_caption_short"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:textColor="?android:attr/colorEdgeEffect" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CALENDAR -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="@color/material_yellow"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp"
            app:strokeWidth="0dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/btnCalendar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/button_background"
                    android:backgroundTint="?android:attr/colorForegroundInverse"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_oui_calendar"
                    android:contentDescription="@string/open_calendar"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar_caption_short"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:textColor="?android:attr/colorEdgeEffect" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>
