<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="end"
android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
android:background="@drawable/bottom_sheet_background"
android:paddingBottom="20dp"
android:theme="@style/modalstylenointernet">
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="0dp"
        android:elevation="1dp"
        android:scaleY="1"
        android:scaleX="1.5"
        android:paddingTop="10dp"/>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginStart="13dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="13dp"
    android:layout_marginBottom="0dp"
    android:backgroundTint="@color/bottom_bar"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@android:color/transparent">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/card_view_icon"
        android:padding="0dp"
        android:src="@drawable/bottomsheetlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:paddingBottom="0dp"
        android:text="@string/no_internet_connectiontitle"
        android:textSize="15sp"
        android:textStyle="bold" />
</com.google.android.material.card.MaterialCardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </Space>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:contentDescription="@string/nointernet"
    android:scaleType="center"
    android:paddingTop="10dp"
    app:srcCompat="@drawable/ic_no_internet_oval" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </Space>
<Button
    android:id="@+id/btn_try_again"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="24dp"
    android:background="@drawable/btn_ripple"
    android:backgroundTint="?attr/nointernetstyle"
    android:clickable="true"
    android:focusable="true"
    android:fontFamily="@font/my_custom_font"
    android:letterSpacing="0.1"
    android:text="@string/submit"
    android:textAllCaps="false"
    android:textColor="@color/box_alert_update"
    android:textSize="15sp"
    android:textStyle="bold"
    tools:ignore="VisualLintButtonSize" />
</LinearLayout>