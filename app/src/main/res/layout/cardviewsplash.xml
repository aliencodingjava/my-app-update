                app:cardElevation="2dp"
                app:rippleColor="@color/material_yellow"
                android:backgroundTint="@color/actionbarwebsitestandart"
                app:strokeWidth="0dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/card3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!-- BLURRED BACKGROUND ONLY -->
                <com.flights.studio.BlurCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/actionbarwebsitestandart"
                    app:strokeColor="@color/neon_blue"
                    app:cardElevation="2dp"
                    app:strokeWidth="4dp"
                    android:alpha="0.3" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:tint="@color/neon_blue"
                    android:src="@drawable/travel_16dp_ffffff_fill0_wght400_grad0_opsz20"
                    android:scaleType="center"/>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- New Cards -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
