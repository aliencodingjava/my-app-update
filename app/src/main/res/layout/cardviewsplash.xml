                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:tint="@color/neon_blue"
                    android:src="@drawable/ic_oui_news" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:rippleColor="@color/material_yellow"
                android:backgroundTint="@color/actionbarwebsitestandart"
                app:strokeWidth="0dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/card2"
                app:layout_constraintEnd_toStartOf="@id/card4"
                android:layout_margin="4dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!-- BLURRED BACKGROUND ONLY -->
                <com.flights.studio.BlurCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/actionbarwebsitestandart"

                    app:strokeColor="@color/neon_blue"
                    app:cardElevation="2dp"
                    app:strokeWidth="4dp"
                    android:alpha="0.3" />
