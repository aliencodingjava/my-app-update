                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/color_ok_update_alert"
                    app:strokeColor="@color/neon_blue"
                    app:cardElevation="2dp"
                    app:strokeWidth="4dp"
                    android:alpha="0.3" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:tint="@color/neon_blue"
                    android:src="@drawable/groups_2_24dp_ffffff_fill1_wght400_grad0_opsz24" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:rippleColor="@color/material_yellow"
                app:cardBackgroundColor="@color/color_ok_update_alert"
                app:strokeWidth="0dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintBottom_toTopOf="@id/card4"
                app:layout_constraintStart_toEndOf="@id/card7"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!-- BLURRED BACKGROUND ONLY -->
                <com.flights.studio.BlurCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/color_ok_update_alert"
                    app:strokeColor="@color/neon_blue"
                    app:cardElevation="2dp"
                    app:strokeWidth="4dp"
                    android:alpha="0.3" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:tint="@color/neon_blue"
                    android:src="@drawable/book_24dp_ffffff_fill1_wght400_grad0_opsz24"
                    android:scaleType="center"/>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Top Row (New) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card13"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/box_qrcode"
                app:strokeWidth="3dp"
                app:strokeColor="@color/neon_blue"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintBottom_toTopOf="@id/card9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card14"
                android:layout_margin="4dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/fiber_manual_record_24dp_ffffff_fill0_wght400_grad0_opsz24" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card14"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/box_qrcode"
                app:strokeWidth="3dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintBottom_toTopOf="@id/card10"
                app:layout_constraintStart_toEndOf="@id/card13"
                app:layout_constraintEnd_toStartOf="@id/card15"
                android:layout_margin="4dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/fiber_manual_record_24dp_ffffff_fill0_wght400_grad0_opsz24" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card15"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/box_qrcode"
                app:strokeWidth="3dp"
