                android:id="@+id/card9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/box_floating_bar"
                app:rippleColor="@color/material_yellow"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintBottom_toTopOf="@id/card5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- BLURRED BACKGROUND ONLY -->
                    <com.flights.studio.BlurCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/box_floating_bar"
                        app:strokeColor="@color/neon_blue"
                        app:cardElevation="2dp"
                        app:strokeWidth="4dp"
                        android:alpha="0.3" />

                    <!-- SHARP FOREGROUND -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icon_inside_card9"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="center"
                            android:tint="@color/neon_blue"
                            android:src="@drawable/account_circle_24dp_ffffff_fill1_profile" />

                        <TextView
                            android:id="@+id/text_inside_card9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:text="@string/title_my_profile"
                            android:textSize="11sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


