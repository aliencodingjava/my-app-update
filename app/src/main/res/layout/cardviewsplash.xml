                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/fiber_manual_record_24dp_ffffff_fill0_wght400_grad0_opsz24" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card16"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/box_qrcode"
                app:strokeWidth="3dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintBottom_toTopOf="@id/card12"
                app:layout_constraintStart_toEndOf="@id/card15"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/fiber_manual_record_24dp_ffffff_fill0_wght400_grad0_opsz24" />
            </com.google.android.material.card.MaterialCardView>

