<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bottom_sheet_background"
    android:theme="@style/modalbottomsheet">

    <!-- Header section with logo and title -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:strokeColor="@android:color/transparent"
        android:backgroundTint="@color/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/bottomsheetlogo"
            android:contentDescription="@string/card_view_icon" />

        <com.flights.studio.DraggableFloatingActionButton
            android:id="@+id/feedback_send"
            style="@style/Widget.Material3.FloatingActionButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal|center_vertical"
            android:layout_marginEnd="0dp"
            android:contentDescription="@string/card_view_icon"
            android:elevation="4dp"
            android:fadingEdge="horizontal"
            android:focusable="true"
            android:foregroundGravity="center"
            android:paddingBottom="0dp"
            android:src="@drawable/ic_oui_message_send"
            app:fabCustomSize="45dp"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:maxImageSize="30dp"
            app:rippleColor="@color/material_yellow"
            tools:ignore="VisualLintBounds,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_us"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="0dp" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">


        <!-- Donut Progress for Overall Rating -->
        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donutProgress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:donut_finished_color="@color/material_yellow"
            app:donut_unfinished_color="@color/box_alert_update"
            app:donut_max="100"
            app:donut_progress="0"
            app:donut_text_size="18sp"
            app:donut_text_color="?android:attr/colorForeground" />

    <!-- RatingBar to capture user input -->
    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mrb_progressTint="@color/material_yellow"
        app:mrb_secondaryProgressTint="@color/material_yellow"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:numStars="5"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:rating="0" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/rate_us_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/bottom_bar">


    <LinearLayout
        android:id="@+id/rate_us_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">

        <!-- Ratings Progress Bars section -->

        <!-- 5 stars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Star Icon and Text -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/_5_stars"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:drawablePadding="8dp"
                app:drawableLeftCompat="@drawable/kid_star_fill1_wght400_grad0_opsz24" />

            <!-- Progress Bar -->
            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/fiveStarProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="3"
                android:max="100"
                android:progress="0"
                android:progressBackgroundTint="@color/box_alert_update"
                android:progressDrawable="@drawable/progress_bar_rating_round_shape"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Star Count Text -->
            <TextView
                android:id="@+id/fiveStarCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_0"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
        </LinearLayout>

        <!-- 4 stars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:drawablePadding="8dp"
                android:text="@string/_4_stars"
                app:drawableLeftCompat="@drawable/kid_star_fill1_wght400_grad0_opsz24" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/fourStarProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:max="100"
                android:layout_height="12dp"
                android:layout_weight="3"
                android:progress="0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:progressBackgroundTint="@color/box_alert_update"
                android:progressDrawable="@drawable/progress_bar_rating_round_shape" />

            <TextView
                android:id="@+id/fourStarCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/_0" />
        </LinearLayout>

        <!-- 3 stars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:drawablePadding="8dp"
                android:text="@string/_3_stars"
                app:drawableLeftCompat="@drawable/kid_star_fill1_wght400_grad0_opsz24" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/threeStarProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:max="100"
                android:layout_height="12dp"
                android:layout_weight="3"
                android:progress="0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:progressBackgroundTint="@color/box_alert_update"
                android:progressDrawable="@drawable/progress_bar_rating_round_shape" />

            <TextView
                android:id="@+id/threeStarCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/_0" />
        </LinearLayout>

        <!-- 2 stars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:drawablePadding="8dp"
                android:text="@string/_2_stars"
                app:drawableLeftCompat="@drawable/kid_star_fill1_wght400_grad0_opsz24" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/twoStarProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:max="100"
                android:layout_height="12dp"
                android:layout_weight="3"
                android:progress="0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:progressBackgroundTint="@color/box_alert_update"
                android:progressDrawable="@drawable/progress_bar_rating_round_shape" />

            <TextView
                android:id="@+id/twoStarCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/_0" />
        </LinearLayout>

        <!-- 1 star -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:drawablePadding="8dp"
                android:text="@string/_1_star"
                app:drawableLeftCompat="@drawable/kid_star_fill1_wght400_grad0_opsz24" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/oneStarProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:max="100"
                android:layout_height="12dp"
                android:layout_weight="3"
                android:progress="0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:progressBackgroundTint="@color/box_alert_update"
                android:progressDrawable="@drawable/progress_bar_rating_round_shape" />

            <TextView
                android:id="@+id/oneStarCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/_0" />
        </LinearLayout>
        <!-- Submit button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_ripple"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/my_custom_font"
            android:letterSpacing="0.1"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_send"
            tools:ignore="TouchTargetSizeCheck,VisualLintBounds" />
    </LinearLayout>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    </LinearLayout>


</LinearLayout>