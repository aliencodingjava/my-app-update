<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/counter_bg"
    android:padding="20dp"
    android:orientation="vertical">

    <!-- Header row: icon + title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingBottom="0dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/help"
            android:src="@drawable/ic_samsung_info"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_note_help_title"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="?attr/colorOnSurface"
            android:letterSpacing="0.01"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <!-- Subtle divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:alpha="0.5"
        android:layout_marginBottom="10dp" />

    <!-- Body (HTML bullets rendered in code) -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/helpBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_note_help_bullets"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:lineSpacingExtra="4dp"
        android:letterSpacing="0.01"
        android:includeFontPadding="false"
        android:paddingBottom="12dp" />

    <!-- 1) Add Image -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnHelpAddImage"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="6dp"
        app:rippleColor="@color/material_yellow"
        app:cardCornerRadius="25dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSecondaryContainer">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"

            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconAdd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_samsung_image"
                app:tint="?attr/colorOnSecondaryContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Centered label (independent of icon width) -->
            <TextView
                android:id="@+id/labelAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_add_images"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 2) Auto Title -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnHelpAutoTitle"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        app:rippleColor="@color/material_yellow"
        app:cardCornerRadius="25dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSecondaryContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/iconAuto"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/imageview"
                android:src="@drawable/network_intelligence_24dp_ffffff_fill1_wght400_grad0_opsz24"
                app:tint="?attr/colorOnSecondaryContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/labelAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_auto_title"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 3) Close -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnHelpClose"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        app:rippleColor="@color/material_yellow"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Optional spacer so the title feels balanced vs. the others -->

            <ImageView
                android:id="@+id/icon_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/imageview"
                android:src="@drawable/ic_samsung_close"
                app:tint="?attr/colorOnSecondaryContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/labelClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
