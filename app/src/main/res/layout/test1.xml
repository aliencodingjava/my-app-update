<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mini_preview_container"
    android:layout_width="140dp"
    android:layout_height="100dp"
    android:clipToOutline="true"
    android:padding="0dp">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/expandable_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/material_yellow"
        app:layout_constraintTop_toBottomOf="@id/collapsing_text_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/frame_background"/>
    <!-- Header (Main Color) -->


    <!-- Buttons Row -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/collapsing_text_container"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="0dp"
        style="@style/Widget.Material3.CardView.Elevated"
        app:strokeWidth="0.5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/material_yellow"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Action buttons row -->
    <LinearLayout
        android:id="@+id/action_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/collapsing_text_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fab_call"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="6dp"
            app:strokeWidth="0.5dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/material_yellow"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fab_update"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/material_yellow"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fab_delete"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/material_yellow"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
