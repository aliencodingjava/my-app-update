<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_rounded_corners_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Title for Add Contact -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_contact"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="top|center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginBottom="0dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:strokeWidth="0dp"
            app:strokeColor="@color/white">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/photoPlaceholderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Insert Your Photo"
                android:fontFamily="@font/roboto_slab_extra_bold"
                android:textSize="16sp"
                android:elevation="7dp"
                android:textColor="@color/black"
                android:background="@drawable/curent_time"
                android:padding="8dp"
                android:visibility="visible"
                tools:ignore="HardcodedText" />
        <!-- ImageView inside CardView -->
        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/update_contact"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:hint="@string/name"
        android:inputType="textPersonName|textCapWords"
        android:minHeight="48dp"
        android:importantForAutofill="yes"
        android:imeOptions="actionNext"
        android:padding="8dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="tel"
        android:hint="@string/phone"
        android:inputType="phone"
        android:digits="0123456789+"
        android:minHeight="48dp"
        android:importantForAutofill="yes"
        android:imeOptions="actionNext"
        android:padding="8dp"
        tools:ignore="TextFields,VisualLintTextFieldSize" />
    <TextView
        android:id="@+id/countryFlagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:visibility="gone"/>


    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="email"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:importantForAutofill="yes"
        android:imeOptions="actionNext"
        android:padding="8dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="streetAddress,postalAddress"
        android:hint="@string/address_title"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:maxLines="2"
        android:importantForAutofill="yes"
        android:imeOptions="actionDone"
        android:padding="8dp"
        tools:ignore="VisualLintTextFieldSize" />

    <!-- Button Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingTop="0dp">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:backgroundTint="@color/box_alert_update"
            android:elevation="1dp"
            app:strokeWidth="0dp"
            app:rippleColor="?attr/colorControlHighlight"
            android:textColor="?attr/actionMenuTextColor"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            tools:ignore="VisualLintButtonSize" />

        <!-- Left Spacer: adjusts the space between cancel button and divider -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <!-- Vertical Divider -->
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/green" />

        <!-- Right Spacer: adjusts the space between divider and save button -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="0dp"
            android:backgroundTint="@color/box_alert_update"
            android:elevation="1dp"
            app:strokeWidth="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:text="@string/save"
            android:textColor="@color/red"
            app:rippleColor="?attr/colorControlHighlight"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

    </LinearLayout>


</LinearLayout>
