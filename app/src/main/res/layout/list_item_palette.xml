<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/palette_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/palette_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="12dp"
        android:backgroundTint="@color/box_qrcode"
        android:background="@drawable/button_selector"
        android:clipToOutline="true">

        <!-- ðŸ”µ LEFT: Color info & labels -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <!-- Palette name -->
            <TextView
                android:id="@+id/palette_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:text="@string/palette_name" />

            <!-- MAIN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/color_rect_1"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    app:strokeWidth="0dp"
                    android:background="@drawable/dialog_background" />

                <TextView
                    android:id="@+id/label_color_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main"
                    android:textSize="13sp"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>

            <!-- OVERLAY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/color_rect_2"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    app:strokeWidth="0dp"

                    android:background="@drawable/dialog_background" />

                <TextView
                    android:id="@+id/label_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overlay"
                    android:textSize="13sp"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>

            <!-- BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/color_rect_3"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    app:strokeWidth="0dp"
                    android:background="@drawable/dialog_background" />

                <TextView
                    android:id="@+id/label_color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buttons"
                    android:textSize="13sp"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸŸ¡ RIGHT: Mini color preview -->
        <include
            layout="@layout/test1"
            android:id="@+id/mini_preview"
            android:layout_width="140dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
