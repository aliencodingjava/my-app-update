<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/combined_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/box_alert_update"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <!-- Collapsing Text Container -->
        <LinearLayout
            android:id="@+id/collapsing_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Icon Image -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circular_background"
                android:contentDescription="@string/icon_image"
                android:elevation="4dp"
                android:padding="8dp"
                android:src="@drawable/my_photo"
                app:tint="@color/bottom_bar"
                tools:ignore="ImageContrastCheck" />

            <!-- Name TextView -->
            <TextView
                android:id="@+id/text_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="12dp"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Expand/Collapse Icon -->
            <ImageView
                android:id="@+id/expand_collapse_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/custum_down_arrow"
                android:contentDescription="@string/expand_collapse" />
        </LinearLayout>

        <!-- Expandable Content -->
        <LinearLayout
            android:id="@+id/expandable_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone"
            android:background="@drawable/dialog_background">

            <!-- Phone field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                tools:ignore="TouchTargetSizeCheck">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_oui_phone"
                    android:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="?attr/colorControlActivated" />

            <!-- Email field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                tools:ignore="TouchTargetSizeCheck">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_oui_email"
                    android:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="?attr/colorControlActivated" />

            <!-- SMS, Map & Share buttons in one row -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <!-- SMS Button (Start) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/sms_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_oui_message"
                    android:contentDescription="@string/send_sms"
                    android:background="?attr/selectableItemBackground"
                    android:tint="?attr/colorPrimary"
                    android:padding="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Share Button (Center) -->
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/button_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:textColor="?attr/actionMenuTextColor"
                    app:icon="@drawable/ic_oui_share"
                    app:iconTint="?attr/colorAccent"
                    app:backgroundTint="?android:attr/colorBackground"
                    android:drawablePadding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sms_button"
                    app:layout_constraintEnd_toStartOf="@id/map_button" />

                <!-- Map Button (End) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/map_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/baseline_map_24"
                    android:contentDescription="@string/open_maps"
                    android:background="?attr/selectableItemBackground"
                    android:tint="?attr/colorPrimary"
                    android:padding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
