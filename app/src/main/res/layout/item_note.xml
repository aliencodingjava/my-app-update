<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="1dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="3dp"
    android:clickable="false"
    android:focusable="false"
    android:foreground="@null"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:strokeColor="?android:attr/colorEdgeEffect"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Expand/Collapse Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rightCard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:clickable="false"
            android:focusable="false"
            app:cardBackgroundColor="@color/bottom_sheet"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="1dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/expandCollapseIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginEnd="0dp"
                    android:contentDescription="@string/expand_collapse"
                    android:src="@drawable/all_notes_icon"
                    tools:ignore="ContentDescription" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/reminderIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:clickable="true"
                    android:contentDescription="@string/reminder_icon"
                    android:src="@drawable/new_calendar_icon"
                    android:visibility="gone"
                    tools:ignore="TouchTargetSizeCheck" />

                <View
                    android:id="@+id/reminderBadge"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="19dp"
                    android:background="@drawable/badge_red"
                    android:visibility="gone" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Title and Note Section -->
        <!-- Title and Note Section -->
        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:foreground="@drawable/spen_ripple_effect_drawable"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rightCard"
            app:layout_constraintStart_toEndOf="@id/checkedIcon"
            app:layout_constraintTop_toTopOf="parent">


            <!-- Title Text -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/box_alert_update"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorControlHighlight"
                app:strokeWidth="0.5dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/roboto_slab_regular"
                    android:maxLines="1"
                    android:text="@string/test"
                    android:textAlignment="center"
                    android:textColor="?android:attr/colorEdgeEffect"
                    android:textSize="14sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Note Text -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLines="3"
                    android:text="@string/add_note"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="?attr/colorAccent"
                    android:textSize="14sp"
                    tools:text="Sample note content" />
            </FrameLayout>


        </LinearLayout>

        <!-- Check Circle (Icon) -->
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/checkedIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:focusable="false"
            android:clickable="false"
            android:checked="false"
            android:elevation="8dp"
            app:useMaterialThemeColors="false"
            app:buttonTint="@color/material_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/note_images"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/ic_oui_image"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
