<!-- item_list_card.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardView"
    android:layout_width="0dp"
    android:layout_height="50dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="13dp"
    android:layout_marginStart="13dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:clickable="true"
    android:focusable="true"
    app:strokeWidth="0dp"
    app:rippleColor="?attr/colorControlHighlight"
    android:backgroundTint="@color/item_cards_day_night"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:elevation="1dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/icon_background_shape"
            android:src="@drawable/bottomsheetlogo"
            android:contentDescription="@string/card_view_icon"
            app:tint="@color/selector_item_bottomsheet" />

        <TextView
            android:id="@+id/itemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textStyle="bold"
            android:paddingStart="50dp"
            android:paddingEnd="0dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="@string/sample_item"
            android:textColor="@color/right_arrow"
            android:textSize="13sp"
            android:layout_marginEnd="10dp"
            app:drawableEndCompat="@drawable/ios_right_arrow"
            app:drawableRightCompat="@drawable/ios_right_arrow" />

</com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>