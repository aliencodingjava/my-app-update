<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/bottom_bar"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="0dp"
    android:paddingEnd="0dp"
    android:paddingBottom="5dp">

    <!-- Logout button (invisible by default to avoid layout jump) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerAuthCard"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center|end"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        android:visibility="invisible"
        app:rippleColor="?attr/colorControlHighlight"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:paddingEnd="12dp"
            android:paddingStart="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/headerAuthIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/logout_24dp_ffffff_fill0_wght400_grad0_opsz24"
                app:tint="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/headerAuthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/logout"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>


    <!-- ICON + TEXTS in horizontal row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical">

        <!-- ICON on the left -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/IconCardContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/holo_yellow_light"
            app:strokeWidth="1dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/update_contact"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rt_text_logo_jac" />

                <TextView
                    android:id="@+id/iconInitials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/box_alert_update"
                    android:gravity="center"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TEXTS on the right with icons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/userMainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="start|center"
                app:drawableStartCompat="@drawable/person_24dp_ffffff_fill1_wght400_grad0_opsz24" />

            <TextView
                android:id="@+id/userSecondaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="start|center"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                app:drawableStartCompat="@drawable/call_24dp_ffffff_fill1_profile_phone" />

            <TextView
                android:id="@+id/userStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:text="• Online •"
                android:textSize="12sp"
                android:textStyle="italic"
                android:ellipsize="none"
                android:layout_marginTop="4dp"
                android:gravity="start|center"
                app:drawableStartCompat="@drawable/signal_wifi_4_bar_24dp_ffffff_fill1_online"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>

    <!-- Dropdown arrow -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerArrowCard"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginEnd="35dp"
        app:cardCornerRadius="20dp"
        android:focusableInTouchMode="true"
        app:strokeColor="@color/transparent"
        app:rippleColor="@color/fab_ripple"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/headerArrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/show_hide_menu"
            android:background="@drawable/btn_ripple"
            android:scaleType="centerInside"
            android:src="@drawable/ic_oui_keyboard_arrow_down"
            app:tint="@color/disabled_tint" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
