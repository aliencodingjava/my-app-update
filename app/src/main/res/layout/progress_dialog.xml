<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_container_downloading_update"
    android:background="@drawable/checking_for_updates_backround"
    android:theme="@style/modalbottomsheet"
    android:padding="16dp">

    <!-- MaterialCardView -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        app:strokeColor="@android:color/transparent"
        android:backgroundTint="@color/bottom_bar">

        <!-- Content inside the Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/bottomsheetlogo"
                android:contentDescription="@string/card_view_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/downloading_update"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_cloud_download_24"
                android:contentDescription="@string/card_view_icon" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Time Left and Percentage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_time_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/time_left"
            android:textColor="@color/text_color_alert" />

        <TextView
            android:id="@+id/text_view_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/zero_percent"
            android:textColor="@color/text_color_alert" />
    </LinearLayout>

    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressBackgroundTint="@color/box_alert_update"
        android:layout_marginVertical="10dp"
        android:progressDrawable="@drawable/custom_progress_bar" />
</LinearLayout>
