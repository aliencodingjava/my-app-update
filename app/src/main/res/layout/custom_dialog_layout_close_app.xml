<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:id="@+id/bottom_sheet_container_checking_update"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:padding="10dp"
 android:backgroundTint="@color/card_background"
 android:background="@drawable/checking_for_updates_backround">

<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    android:layout_marginEnd="13dp"
    android:layout_marginStart="13dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    app:strokeColor="@android:color/transparent"
    android:backgroundTint="@color/box_alert_update"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bottomsheetlogo"
        android:contentDescription="@string/card_view_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/baseline_exit_to_app_24"
        android:contentDescription="@string/card_view_icon"
        app:tint="?android:attr/colorActivatedHighlight" />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/exit_confirmation"
        android:padding="0dp"
        android:textStyle="bold"
        android:textSize="15sp"/>
</com.google.android.material.card.MaterialCardView>
<Space
    android:layout_width="match_parent"
    android:layout_height="10dp">
</Space>
<TextView
    android:id="@+id/dialog_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Are you sure you want to close the app?"
    android:layout_gravity="center"
    android:textColor="?attr/colorOnBackground"
    android:textSize="16sp"
    android:layout_marginTop="0dp"
    tools:ignore="HardcodedText" />
<Space
    android:layout_width="match_parent"
    android:layout_height="10dp">
</Space>
    <!-- Button Layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="end"
        android:clipToPadding="false"
        android:clipChildren="false">


    <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_cancel"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:background="@drawable/btn_ripple"
            android:textColor="?android:attr/colorEdgeEffect"
            app:backgroundTint="@color/box_alert_update"
            android:layout_marginEnd="56dp"
            android:padding="12dp"
            android:textSize="14sp"/>

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_confirm"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:background="@drawable/btn_ripple"
            app:backgroundTint="@color/box_alert_update"
            android:textColor="?android:attr/colorFocusedHighlight"
            android:padding="12dp"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>

