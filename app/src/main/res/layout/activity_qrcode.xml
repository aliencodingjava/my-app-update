<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="30dp"
    android:background="@drawable/default_pattern"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleTextColor="@color/transparent"
        app:title="QRCODE"
        android:background="@color/transparent">

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/frame_layout_qrcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="400dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:strokeWidth="0dp">
        <!-- QR Code Text -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center|bottom"
            app:cardElevation="2dp"
            app:strokeColor="@color/black"
            app:strokeWidth="0dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Scan QR Code"
    android:textColor="@color/black"
    android:background="@drawable/qr_code_text"
    android:layout_gravity="bottom|center"
    android:textAlignment="center"
    android:paddingVertical="4dp"
    android:paddingHorizontal="10dp"
    android:layout_marginBottom="0dp"
    android:gravity="center"
    android:textSize="22sp"/>
        </com.google.android.material.card.MaterialCardView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/qrcode"
            android:src="@drawable/appv172bing_generated_qrcode" />
    </com.google.android.material.card.MaterialCardView>



    <LinearLayout
        android:id="@+id/scanqrcode"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:keepScreenOn="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/box_qrcode"
        android:background="@drawable/round_close_button"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:padding="0dp">


            <TextView
                android:id="@+id/qrcode_png"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginStart="0dp"
                android:paddingTop="10dp"
                android:text="Scan QR Code!"
                android:textColor="?attr/actionMenuTextColor"
                tools:ignore="HardcodedText"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:background="?attr/colorControlActivated"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/box_alert_update"
                android:layout_gravity="center"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/explain"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/why_download_app"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    tools:ignore="HardcodedText" />
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">

<com.google.android.material.button.MaterialButton
    android:id="@+id/share_friends"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_ripple"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:textAlignment="center"
    android:text="@string/share_app_title"
    android:layout_marginBottom="0dp"/>

</LinearLayout>
</RelativeLayout>
