<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:elevation="0dp"
    android:fitsSystemWindows="true"
    android:background="@color/bottom_bar"
    >

<com.google.android.material.appbar.AppBarLayout
    android:id="@+id/app_bar"
    app:logo="@drawable/contact_logo_topbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_bar_height"
    app:layout_scrollFlags="scroll|enterAlways|snap"
    android:theme="@style/Theme.Test.AppBarOverlay">


    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        app:title="@string/Contact"
        android:elevation="0dp"
        app:expandedTitleTextAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        app:collapsedTitleTextAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_height="match_parent"
        app:titleCollapseMode="scale"
        app:expandedTitleGravity="center"
        app:contentScrim="@color/bottom_bar"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
        app:toolbarId="@+id/toolbar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:elevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/Theme.Test.PopupOverlay" >


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/logo"
                style="@style/fab_set_Lic_pr_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fab_margin"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|enterAlwaysCollapsed"
                android:contentDescription="@string/fab_content_desc"
                app:fabCustomSize="40dp"
                app:layout_anchor="@id/toolbar"
                app:titleCollapseMode="scale"
                app:layout_anchorGravity="center|start"
                app:srcCompat="@drawable/ic_oui_contact"
                tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:background="@drawable/settings_round_top_corners"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:clipToOutline="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rootFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="0dp"
                android:backgroundTint="@color/box_alert_update"

                app:strokeWidth="0dp" />
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>





    <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fab"
    style="@style/fab_set_Lic_pr_con"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/fab_margin"
    android:contentDescription="@string/fab_content_desc"
    app:fabCustomSize="55dp"
    app:fabSize="normal"
    app:layout_anchor="@id/app_bar"
    app:layout_anchorGravity="bottom|end"
    app:srcCompat="@drawable/ic_oui_contact_outline"
    tools:ignore="ImageContrastCheck" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
