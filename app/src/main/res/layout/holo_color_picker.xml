<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_rounded_corners_cardview"
    android:orientation="vertical"
    android:padding="16dp">
    <!-- ðŸ”¹ Color Preview & Centered Text -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="16dp">

        <!-- ðŸ”µ Circular Color Preview (Always on Left) -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dynamic_color_preview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_color__select_color"/>


        <!-- ðŸ“ Centered TextView (Now perfectly centered) -->
        <TextView
            android:id="@+id/text_select_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_a_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/actionMenuTextColor"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>



    <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:background="?attr/colorControlHighlight"
    app:strokeWidth="0dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="10dp"
    app:strokeColor="@color/transparent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/holo_color_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:clipToPadding="false"
        android:isScrollContainer="true"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="ifContentScrolls"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>
</com.google.android.material.card.MaterialCardView>

</LinearLayout>
