<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/box_qrcode"
    android:background="@drawable/bottom_rounded_corners_cardview"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_palette"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:queryHint="Search palette..."
            android:iconifiedByDefault="false" />

        <TextView
            android:id="@+id/text_select_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_palette_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/actionMenuTextColor"
            android:layout_marginEnd="12dp"
            android:visibility="visible" />

    </LinearLayout>


    <!-- Palette List -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="18dp"
        app:strokeWidth="0dp"
        android:backgroundTint="@color/card_background"
        app:strokeColor="@color/transparent">
        <!-- ListView -->


        <ListView
            android:id="@+id/holo_color_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="6dp"
            android:isScrollContainer="true"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="ifContentScrolls"
            android:padding="4dp"
            android:clipToPadding="false" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
