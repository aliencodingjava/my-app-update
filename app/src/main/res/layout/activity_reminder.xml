<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reminder_notes_background"
    android:fitsSystemWindows="true"
    android:padding="0dp"
    tools:context=".ReminderActivity">

    <!-- FrameLayout Wrapping Title & RecyclerView -->
    <FrameLayout
        android:id="@+id/recyclerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginBottom="50dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toTopOf="@id/homeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- LinearLayout for stacking title and list -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <!-- Title Inside FrameLayout -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:text="@string/your_reminder_note"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/holo_yellow_light" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background"
                android:backgroundTint="@color/box_floating_bar"
                app:cardCornerRadius="45dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <!-- RecyclerView Below Title -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/noteLinesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="vertical" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>

    <!-- Home Button fixed at the bottom -->
    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/Home"
        android:elevation="8dp"
        android:scaleX="1.8"
        android:scaleY="1.8"
        android:src="@drawable/new_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>