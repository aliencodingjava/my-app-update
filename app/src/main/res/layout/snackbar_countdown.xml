<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:background="@color/box_alert_update"
    android:padding="0dp">

    <!-- Countdown Circle -->
    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/countdownCircle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="false"
        app:arc_text_size="20sp"
        app:arc_suffix_text_size="1sp"
        app:arc_stroke_width="3dp"
        app:arc_bottom_text="@string/time"
        app:arc_suffix_text_padding="0dp"
        app:arc_bottom_text_size="8sp"
        android:max="20"
        android:progress="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Dismiss Button -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dismissButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_oui_close"
        app:layout_constraintStart_toEndOf="@id/countdownCircle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Open Map Icon -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/openMapIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Open Map Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/openMapButton"
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/open_maps"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="14sp"
        app:backgroundTint="@color/box_qrcode"
        app:icon="@drawable/baseline_map_24"
        app:iconTint="?attr/colorAccent"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
