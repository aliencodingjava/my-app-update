<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/modalbottomsheet"
    android:orientation="vertical"
    android:background="@drawable/bottom_rounded_corners_cardview"
    android:paddingBottom="50dp"
    android:paddingStart="13dp"
    android:paddingEnd="13dp"
    android:paddingTop="20dp">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:strokeColor="@android:color/transparent"
        android:backgroundTint="@color/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/bottomsheetlogo"
            android:contentDescription="@string/card_view_icon" />

    <TextView
        android:id="@+id/call_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/confirm_call_message"
        android:padding="0dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="13sp"/>

    </com.google.android.material.card.MaterialCardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="0dp">

        <!-- Call Group -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.flights.studio.DraggableFloatingActionButton
                android:id="@+id/btn_call"
                style="@style/NoShadowFABCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/call_float"
                app:fabCustomSize="68dp"
                app:maxImageSize="40dp"
                android:src="@drawable/ic_oui_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/label_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_from_contact"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/btn_call"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Cancel Group -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_cancel"
                style="@style/NoShadowFABCallCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cancel"
                android:src="@drawable/ic_oui_call_reject"
                app:fabCustomSize="68dp"
                app:maxImageSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/label_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Cancel"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/btn_cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Flow Layout -->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="group_call,group_cancel"
            app:flow_wrapMode="chain"
            app:flow_horizontalGap="100dp"
            app:flow_verticalGap="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
