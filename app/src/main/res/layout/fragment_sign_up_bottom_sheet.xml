<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/modalbottomsheet"
    android:background="@drawable/bottom_sheet_background"
    android:gravity="end"
    android:padding="20dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:strokeColor="@android:color/transparent"
        android:backgroundTint="@color/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bottomsheetlogo"
        android:contentDescription="@string/card_view_icon" />

        <ImageView
            android:id="@+id/download_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/notification_add_fill1_wght400_grad0_opsz24"
            android:contentDescription="@string/card_view_icon" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/be_the_first_updated"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="0dp" />
    </com.google.android.material.card.MaterialCardView>


    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="givenName"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:textColor="?attr/editTextColor"
        tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="familyName"
        android:hint="@string/last_name"
        android:inputType="textPersonName"
        android:textColor="?attr/editTextColor"
        tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/email"
        android:textColor="?attr/editTextColor"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/btn_ripple"
        android:backgroundTint="?attr/modalstyleclick"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/my_custom_font"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="@color/box_alert_update"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
</LinearLayout>