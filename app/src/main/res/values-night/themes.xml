<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Test" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="itemIconTint">@color/selector_item_color</item>
        <item name="android:statusBarColor">@color/lightStatusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material</item>

    </style>

    <style name="Preference.SwitchPreferenceCompat" parent="@style/Preference.SwitchPreferenceCompat.Material"
        tools:ignore="ResourceCycle">
        <item name="widgetLayout">@layout/preference_switch</item>
    </style>

    <style name="PhotoTheme.Theme" parent="Base.Theme.Test">
        <item name="android:statusBarColor">@color/darkPhotoStatusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="sky_top">@color/night_sky_top</item>
        <item name="sky_mid">@color/night_sky_mid</item>
        <item name="atmosphere">@color/night_atmosphere</item>
        <item name="mountain_high">@color/night_mountain_high</item>
        <item name="mountain_mid">@color/night_mountain_mid</item>
        <item name="mountain_low">@color/night_mountain_low</item>
        <item name="foothills">@color/night_foothills</item>
        <item name="ground_high">@color/night_ground_high</item>
        <item name="ground_base">@color/night_ground_base</item>


    </style>
    <!-- Theme for SplashActivity in Dark Theme -->
    <style name="SplashTheme" parent="Base.Theme.Test">
        <item name="android:statusBarColor">@color/darkSplashStatusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorBox">@color/colorBoxDark</item>
        <item name="colorButton">@color/button_color_dark</item>
        <item name="bottomAppBarColor">@color/colorBoxDark</item>

        <item name="sky_top">@color/night_sky_top</item>
        <item name="sky_mid">@color/night_sky_mid</item>
        <item name="atmosphere">@color/night_atmosphere</item>
        <item name="mountain_high">@color/night_mountain_high</item>
        <item name="mountain_mid">@color/night_mountain_mid</item>
        <item name="mountain_low">@color/night_mountain_low</item>
        <item name="foothills">@color/night_foothills</item>
        <item name="ground_high">@color/night_ground_high</item>
        <item name="ground_base">@color/night_ground_base</item>

    </style>

    <style name="contactThemeDark" parent="Base.Theme.Test">
        <item name="android:statusBarColor">#141218</item>
        <item name="customColor">@color/custom_color_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorBox">@color/colorBoxDark</item>
        <item name="bottomAppBarColor">@color/colorBoxDark</item>
    </style>
    <style name="NoIconToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:icon">@null</item>
        <item name="android:logo">@null</item>
    </style>

    <style name="Theme.Test" parent="Base.Theme.Test">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="bottomAppBarColor">@color/darkBottomAppBarColor</item>
        <item name="bottomNavigationColor">@color/darkBottomNavigationColor</item>

    </style>


    <style name="SettingsTheme.Theme" parent="Base.Theme.Test">
        <item name="android:statusBarColor">#141218</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FEF7FF</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="ContactTheme.Theme" parent="Base.Theme.Test">
        <item name="android:statusBarColor">#FEF7FF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>
    <!-- res/values-night/styles.xml (Dark Theme) -->
        <style name="AllContactsActivity.Theme" parent="Base.Theme.Test">
            <item name="android:windowLightStatusBar">false</item>
            <item name="android:textSize">14sp</item>

        </style>


    <style name="modalstylenointernet" parent="Theme.Test">
        <item name="nointernetstyle">@color/modalstyleclicklight</item>
    </style>



    <style name="modalbottomsheet" parent="Theme.Test">
        <item name="modalstyleclick">@color/modalstyleclicklight</item>
        <item name="cornerSize">12dp</item>
    </style>

    <color name="card_background">#1C1D23</color>

    <color name="text_color_alert">#FEF7FF</color>
    <color name="message_color_alert">#FEF7FF</color>
    <color name="box_alert_update">#1C1D23</color>
    <color name="box_contact_expand">#0D1B2A</color>

    <color name="box_qrcode">#131318</color>
    <color name="contacts_card">#1A2C3E</color>

    <color name="arrow_down">#000000</color>


    <color name="item_cards_day_night">@color/material_dynamic_neutral10</color>
    <color name="ripple_Color">#FEF7FF</color>

    <color name="item_card_day_night">#FF32302A</color>
    <color name="right_arrow">#81d4fa</color>

    <!-- deep navy blue or charcoal blue -->
    <color name="bottom_bar">#26272f</color>


    <color name="bottom_sheet">#32302A</color>
    <color name="button_main_card">#CC32302A</color>

    <color name="color_ok_update_alert">#6750A4</color>
    <color name="progress_bar_background">#FEF7FF</color> <!-- Example background color -->


    <style name="FullscreenContainer" parent="Theme.Test">
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SnackbarText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">@color/box_alert_update</item> <!-- Set your desired text color -->

    </style>


    <style name="OpenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_launcher_placeholder</item>
        <item name="android:windowBackground">@color/darkSplashStatusBarColor</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/darkSplashStatusBarColor</item>
        <item name="android:windowActionBar">false</item> <!-- Ensure action bar is hidden -->
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="NoShadowFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="iconTint">@color/bottomAppBarColorPortrait</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
        <item name="backgroundTint">@android:color/holo_blue_bright</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->

    </style>

    <style name="NoShadowFABCall" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">1dp</item>
        <item name="iconTint">@color/bottomAppBarColorPortrait</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
        <item name="backgroundTint">@android:color/holo_green_dark</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
    </style>
    <style name="fab_set_Lic_pr_con" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">2dp</item>
        <item name="backgroundTint">@color/color_success</item>
        <item name="itemFillColor">?attr/itemIconTint</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
    </style>
    <style name="NoShadowFABCallCancel" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">1dp</item>
        <item name="backgroundTint">@android:color/holo_red_dark</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
    </style>

    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item> <!-- Rounded corners -->
        <item name="cornerSize">30dp</item> <!-- Adjust the corner size for a less rounded look -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeOverlay</item> <!-- Add an optional overlay if needed -->
    </style>
    <style name="NoShadow_front_fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@android:color/holo_green_light</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="borderWidth">0dp</item> <!-- Ensure there’s no border/stroke -->
        <item name="strokeColor">@null</item> <!-- Ensure no stroke color is applied -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance_fab</item>
    </style>
    <style name="CustomShapeAppearance_fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item> <!-- Rounded corners -->
        <item name="cornerSize">18dp</item> <!-- Adjust the corner size for a less rounded look -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeOverlay
        </item> <!-- Add an optional overlay if needed -->
    </style>

    <style name="CustomShapeOverlay">
        <item name="cornerSize">15dp</item> <!-- Additional customization for the overlay -->
    </style>

    <style name="Theme.Test.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:background">@color/bottom_bar</item> <!-- Background color -->
        <item name="colorPrimary">@color/bottom_bar</item> <!-- Background for Toolbar/AppBar -->
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheet</item>
    </style>

    <style name="TransparentBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>